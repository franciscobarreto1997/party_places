<%= render 'shared/jumbotron' %>
<div class="container">
  <div class="col-xs-7">
      <h1>
        <strong> <%=@venue.name %></strong>
      </h1>
      <div class="d-inline">
        <%= @venue.category%>&nbsp&nbsp
        <%= @venue.location %>&nbsp&nbsp&nbsp
        Capacity: <%= @venue.capacity %>&nbsp
        <p>
          <%= @venue.description %>
        </p>
      </div>

      <div>
        <strong>Reviews</strong>
        <% @venue.reviews.each  do |review| %>
        <div class="message">
          <div class="message-name">
          </div>
          <div class="message-body">
            "<%= review.content %>"
          </div>
          <div>
            <%= review.rating %> stars
          </div>
        </div>
        <% end %>
      </div>
  </div>
  <div class="col-xs-5">
    <%= render 'shared/venue_form' %>
  </div>
</div>






