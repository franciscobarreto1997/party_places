<%= render 'shared/jumbotron' %>
<div class="container">
  <div class="col-xs-7">
      <h1>
        <strong> <%=@venue.name %></strong>
        <hr>
      </h1>
      <div class="d-inline categories">
<i class="fas fa-building"></i>
        <%= @venue.category%>&nbsp&nbsp
<i class="fas fa-map-marker"></i>
        <%= @venue.location %>&nbsp&nbsp&nbsp
<i class="fas fa-users"></i>
        Capacity: <%= @venue.capacity %>&nbsp

        <hr>
        <p>
          <%= @venue.description %>
        </p>
      </div>

      <div>
        <strong>Reviews</strong>
        <% @venue.reviews.each  do |review| %>
        <div class="message">
          <div class="message-body">
            "<%= review.content %>"
          </div>
          <div>
            <%= review.rating %> <span class="star-icon full">â˜†</span>
          </div>
        </div>
        <% end %>
      </div>
  </div>
  <div class="col-xs-5">
    <%= render 'shared/venue_form' %>
  </div>
</div>

<%= link_to 'Back', search_path %>






